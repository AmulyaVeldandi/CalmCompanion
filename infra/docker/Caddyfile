{
    auto_https disable_redirects
    email off
}

https://localhost {
    tls internal
    encode gzip zstd

    @backend path /api/* /reason /analytics /logs /smart_home /alexa
    reverse_proxy @backend backend:8000

    handle_path /voice/* {
        uri strip_prefix /voice
        reverse_proxy voice_pwa:8080
    }

    handle_path /dashboard/* {
        uri strip_prefix /dashboard
        reverse_proxy frontend:8501
    }

    handle {
        reverse_proxy frontend:8501
    }
}
